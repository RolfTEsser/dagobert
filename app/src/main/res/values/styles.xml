<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="AppHolo" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/mystatusbar</item>
        <item name="android:windowBackground">@drawable/background_holo_dark</item>
        <item name="android:colorBackgroundFloating">@color/dialog_background</item>
        <item name="android:toolbarStyle">@color/mytoolbar</item>
        <item name="colorAccent">#bbbbbb</item>
    </style>

    <style name="AppDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/mystatusbar</item>
        <item name="android:toolbarStyle">@color/mytoolbar</item>
        <item name="colorAccent">#bbbbbb</item>
    </style>

    <style name="AppLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/mystatusbar_light</item>
        <item name="android:toolbarStyle">@color/mytoolbar_light</item>
        <item name="colorAccent">@color/mytoolbar_light</item>
    </style>

